@model Art_fundingV0.Models.ContactModel
@{
    Layout = "~/Views/Shared/LayoutRose.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="container" style="margin-top:100px;">
    <h1>Que souhaitez-vous lui écrire?</h1>
    

    <div class="form-group">
        @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Message, 10, 50, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
        @Html.Hidden("artisteId", @Request["idArtiste"])
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 mt-3">
            <button class="btn btn-success" type="submit" style="font-size: 26px;"> Envoyer</button> 
        </div>
    </div>
 </div>
}
