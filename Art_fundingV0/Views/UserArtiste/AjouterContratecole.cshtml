@model Art_fundingV0.Models.contrat_ecole
@{
    Layout = "~/Views/Shared/LayoutAjouterContratecole.cshtml";
}


    @using (Html.BeginForm("AjouterContratecole", "UserArtiste", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1 style="color: white; font-size: 90px;"> L'ensemble de l'équipe Art_Funding vous félicite ! </h1>
        </div>
        <div class="form-horizontal my-5">
            <h2 style="color: #FFC107; margin-top: 20%; text-align: center;">Afin de finaliser le financement auprès de l'entreprise,<br />vous devez charger ci-dessous le contrat entre vous et l'organisme de formation. </h2>
        </div>
        
        <div class="container-sm">
            @Html.ValidationSummary(true, "", new { @class = "text-center" })
            <div class="row">
                <div class="col my-5 text-center">
                    <div class="form-group">
                        @Html.LabelFor(model => model.fichier_contrat, htmlAttributes: new { @style = "color: white; font-size: 26px;" })
                    </div>
                </div>

                <div class="col my-5 text-center">
                    <input name="file" type="file" style="font-size: 22px;">
                </div>
            </div>

            <div class="row">  
                <div class="col my-5 text-center">
                    <button class="btn btn-danger" style="color: white; font-size: 22px;">@Html.ActionLink("Retour", "Index")</button>
                </div>

                <div class="col my-5">
                        <button class=" btn btn-success" type="submit" style="color: white; font-size: 22px;">Je charge mon contrat. Le rêve se concrétise :) </button>
                    </div>
            </div>
        </div>
    }

