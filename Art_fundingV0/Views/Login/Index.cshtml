@model Art_fundingV0.ViewModels.EntrepriseViewModel

@if (Model.Authentifie)
{
    <h3>
        Vous êtes déjà authentifié avec le login :
        @Model.entreprise.adresse_email
    </h3>
    @Html.ActionLink("Voulez-vous vous déconnecter ?", "Deconnexion")
   
}
else
{
    <p>
        Veuillez vous authentifier :
    </p>
    using (Html.BeginForm())
    {
        <div>
            @Html.LabelFor(m => m.entreprise.adresse_email)
            @Html.TextBoxFor(m => m.entreprise.adresse_email)
            @Html.ValidationMessageFor(m => m.entreprise.adresse_email)
        </div>
        <div>
            @Html.LabelFor(m => m.entreprise.mot_de_passe)
            @Html.PasswordFor(m => m.entreprise.mot_de_passe)
            @Html.ValidationMessageFor(m => m.entreprise.mot_de_passe)
        </div>
        <input type="submit" value="Se connecter" />
        <br />
        @Html.ActionLink("Créer un compte", "CreerCompte")
    }
}