<html>


<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="UTF-8">
    <title>RechercheArtiste</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Style/styleRechercheArtiste.css" rel="stylesheet" />
    <script src="~/Scripts/Font-Awesome.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>

</head>

<body>
    <nav class="navbar navbar-toggler navbar-dark bg-dark w-100">

        <!--  D R O P D O W N  M E N U  -->
        <div class="dropdown">
            <a class="navlink" id="artFunding">Art_F</a>
            <div class="dropdown-content">
                <a href="#">Transformez votre talent en metier</a>
                @Html.ActionLink("Qui sommes-nous ?", "QuiSommeNous", "InfoArtFunding")
                @Html.ActionLink("Nos partenaires", "Partenaires", "InfoArtFunding")
            </div>
        </div>
        <!--  E N D  D R O P D O W N  M E N U  -->
        <!--
        <div class="navbar-header">
             <a class="navbar-brand" href="#"></a>
        </div> -->


        <div class="nav navbar-nav">
            @Html.ActionLink("Découvrez nos projets", "RechercheArtiste", "SelectionArtiste")
        </div>
        @*<form class="navbar-form navbar-left" action="/action_page.php" id="search1">*@
        <div class="navbar-form navbar-left">
            <div class="input-group">
                @using (Html.BeginForm("RechercheArtiste", "SelectionArtiste"))
                {
                    <input type="text" class="form-control" placeholder="Rechercher..." name="searchString">
                    <div class="input-group-btn" id="search2">
                        <button class="btn btn-default" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                }
            </div>
        </div>
        @*</form>*@
        <div class="nav navbar-nav navbar-right">
            <a href="#"><i class="fas fa-user-circle"></i> Bonjour, @ViewBag.nom_entreprise </a>
        </div>
        <div class="nav navbar-nav navbar-right">
            <a href="#"><i class="fas fa-sign-out-alt"></i>@Html.ActionLink("Me déconnecter", "deconnexion", "home")</a>
        </div>
    </nav>


    @RenderBody()

    <footer>
        <div class="footer">
            <ul class="icons">
                <li class="d-inline"><a href="http://facebook.com"><i class="fab fa-facebook-f" alt="Facebook" id="icon1"></i></a></li>
                <li class="d-inline"><a href="http://instagram.com"><i class="fab fa-instagram" alt="Instagram" id="icon2"></i></a></li>
                <li class="d-inline"><a href="http://linkedin.com"><i class="fab fa-linkedin-in" alt="Linkedin" id="icon3"></i></a></li>
                <li class="d-inline"><a href="/"><i class="far fa-envelope" id="icon4"></i></a></li>
            </ul>
        </div>
    </footer>
</body>
</html>


