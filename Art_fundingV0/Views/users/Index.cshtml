@model Art_fundingV0.ViewModels.LoginViewModel
@{
    Layout = null;
}
@if (Model.LoggedIn)
{
    <h3>
        Vous êtes déjà authentifié avec le login :
        @Model.adresse_emailUE
    </h3>
    @Html.ActionLink("Voulez-vous vous déconnecter ?", "Deconnexion")

}
else
{
    <p>
        Veuillez vous authentifier :
    </p>
    using (Html.BeginForm())
    {
        <div>
           
            @Html.LabelFor(m => m.adresse_emailUE)
           
           @Html.TextBoxFor(m => m.adresse_emailUE)
            @Html.ValidationMessageFor(m => m.adresse_emailUE)
        </div>
        <div>
            @Html.LabelFor(m => m.mot_de_passeUE)
            @Html.PasswordFor(m => m.mot_de_passeUE)
            @Html.ValidationMessageFor(m => m.mot_de_passeUE)
        </div>
        <input type="submit" value="Se connecter" />
        <br />
        @Html.ActionLink("Créer un compte", "CreerCompte")
    }
}
