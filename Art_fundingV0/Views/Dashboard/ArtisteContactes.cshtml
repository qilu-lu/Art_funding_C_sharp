@model Art_fundingV0.ViewModels.DashboardEntrepriseViewModel
@{
    Layout = "~/Views/Shared/LayoutAF.cshtml";
}
<style>
    .card-fixed-height {
        max-height: 450px;
        min-height: 200px;
        height: 450px;
    }

    .image-fixed-center {
        height: 100px;
        margin: 10px;
        margin-left: auto;
        margin-right: auto;
        display: block;
    }
</style>
<div>
    <h1>Artistes contactés</h1>
    <div class="container">
        <div class="row">
            @foreach (var artiste in Model.listArtiste)
            {
            <div class="col-3">
                <div class=" card m-1 card-fixed-height">
                    @*<img src="~/Content/images/Art Otter.png" class="flex-shrink-0 me-3" alt="ProjetArtiste" width="200">*@

                    <div class="card-body">

                        <div>
                            <h5>@artiste.nom @artiste.prenom </h5><br />
                            <h5>@artiste.categorie.nom</h5>
                            <h5>@artiste.prix_formation €</h5>
                            <p>@artiste.description</p>
                            <a href="/BoiteArtiste/Portfoliu?idArtiste=@artiste.idartiste" class="btn btn-primary stretched-link">Voir le projet</a>
                            @if (@artiste.photos.Count() > 0)
                            {
                                <br /><img class="image-fixed-center" src="/BoiteArtiste/getPhoto?idPhoto=@artiste.photos.FirstOrDefault().idphoto" alt="Image de l'artiste" />
                            }
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
 
        </div>
</div>